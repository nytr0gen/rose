<div class="layout-single-column">
	<div class="form">
		<form method="post" action="">
			<fieldset>
				<legend>Join</legend>
				<ul class="form">
					{{^ form-join.status }}{{# form-join.message }}<li>{{ . }}</li>{{/ form-join.message }}{{/ form-join.status }}
					<li{{# form-join.fields.username }} class="form-error"{{/ form-join.fields.username }}>
						<label for="username">Username</label>
						<input id="username" name="username" type="text" required autofocus value="{{ form-join.POST.username }}">
					</li>
					<li{{# form-join.fields.password }} class="form-error"{{/ form-join.fields.password }}>
						<label for="password">Password</label>
						<input id="password" name="password" type="password" required>
					</li>
					<li{{# form-join.fields.email }} class="form-error"{{/ form-join.fields.email }}>
						<label for="email">Email</label>
						<input id="email" name="email" type="email" required value="{{ form-join.POST.email }}">
					</li>
				</ul>
			</fieldset>
			<fieldset>
				<input type="submit" name="submit-join" value="Join">
			</fieldset>
		</form>
	</div>
</div>